generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Gift {
  id        Int      @id @default(autoincrement())
  name      String
  email     String
  phone     String
  message   String?
  elderName String
  status    String   @default("pendente")
  createdAt DateTime @default(now())
}

model Elder {
  id      Int     @id @default(autoincrement())
  name    String
  age     Int     @default(0)
  likes   String  @default("")
  wish    String  @default("")
  adopted Boolean @default(false)
  image   String?
}
